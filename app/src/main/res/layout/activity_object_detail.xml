<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObjectDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarObjectDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.huawei.hms.maps.MapView
        android:id="@+id/mapViewObjectDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cameraTargetLat="48.893478"
        app:cameraTargetLng="2.334595"
        app:cameraZoom="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarObjectDetail">

    </com.huawei.hms.maps.MapView>

</androidx.constraintlayout.widget.ConstraintLayout>